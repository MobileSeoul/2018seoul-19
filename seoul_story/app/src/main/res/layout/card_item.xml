<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_item_image_heigth"
            android:id="@+id/card_imageView"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/card_title_textView"
            android:textSize="@dimen/favorite_title_size"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:id="@+id/card_check_imageView"
            android:background="@drawable/ic_favorite_checked"/>
    </FrameLayout>

</android.support.v7.widget.CardView>